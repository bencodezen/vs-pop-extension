{
  "name": "vs-pop",
  "displayName": "vs-pop",
  "description": "Track and visualize your progress",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "vsPop.popView",
          "name": "VS POP"
        }
      ]
    },
    "commands": [
      {
        "command": "vsPop.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vsPop.addCommit",
        "category": "VS POP",
        "title": "Add Commit"
      },
      {
        "command": "vsPop.clearCommits",
        "category": "VS POP",
        "title": "Clear Commits",
        "icon": "$(clear-all)"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "vitepress": "^1.5.0"
  }
}